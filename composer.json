{
    "name": "botmirzapanel/telegram-bot",
    "description": "Modular Telegram bot for VPN panel management with payment integration",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "BotMirzaPanel Team",
            "email": "info@botmirzapanel.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-mysqli": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "psr/http-message": "^1.1",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "BotMirzaPanel\\": "src/",
            "App\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "BotMirzaPanel\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src --level=5",
        "cs-check": "phpcs src --standard=PSR12",
        "cs-fix": "phpcbf src --standard=PSR12",
        "post-install-cmd": [
            "@php -r \"if (!file_exists('config/app.php')) { copy('config/app.example.php', 'config/app.php'); }\"",
            "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\""
        ],
        "setup": [
            "@composer install",
            "@php setup.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "2.0-dev"
        }
    }
}
